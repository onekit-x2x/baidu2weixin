<view  class="container">
    <view  class="page-body">
        <view  class="info-ctn">
            <view  class="info-item" wx:for-item="item" wx:key="item" wx:for="{{infoList}}">
                <text  class="info-label">{{item.label}}：</text>
                <text  class="info-value">{{item.value}}</text>
            </view>
        </view>
        <view  class="btn-ctn">
            <onekit_button  bindtap="getSystemInfo" type="primary" hover-stop-propagation="true">点击获取系统信息</onekit_button>
            <onekit_button  bindtap="clearClick" hover-stop-propagation="true">清空</onekit_button>
        </view>
    </view>
    <view  class="page-title">
        <view  class="page-title-line"></view>
        <view  class="page-title-text">{{title}}</view>
    </view>
</view>