<view  class="container">
        <view  class="page-body">
                <view  class="image-area" bindtap="chooseImage">
                        <block  wx:if="{{ifImg}}">
                                <image  class="img" src="../../images/plus.png"></image>
                                <text  class="upload-image">上传图片</text>
                        </block>
                        <block  wx:else>
                                <scroll-view  scroll-y style="height:224px">
                                        <view  style="text-align:center;">
                                                <image  style="display:inline-block;" mode="widthFix" src="{{src}}"></image>
                                        </view>
                                </scroll-view>
                        </block>
                </view> 
                <onekit_button  bindtap="submit" wx:if="{{!isloading}}" type="primary">提交审核</onekit_button>
                <onekit_button  loading="true" wx:else type="primary">审核中</onekit_button>
                <onekit_button  style="color:#333" bindtap="clearImage" type="default" disabled="{{disabled}}">清空</onekit_button>
                <view  class="tip">审核结果</view>
                <view  class="result">
                        <text  wx:if="{{default}}" class="default">未提交审核</text>
                        <view  wx:else class="{{color ? 'pass' : 'fault'}}">{{textResult}}<br ></br>
                                <text  wx:if="{{fail}}" class="afterTest">请稍后重试</text>
                        </view>
                </view> 
                <view  wx:if="{{detailMessage}}">
                        <view  class="tip">违规项目详细信息</view>
                        <view  class="illedalDetail"> 
                                <view  wx:for-index="index" wx:for-item="item" wx:key="item" wx:for="{{detail}}" style="padding-top:29px">
                                        <view > 
                                                <text  class="detailKey">违规项{{index + 1}}</text>
                                                <text  class="detailValue">{{item.msg}}</text>
                                        </view>
                                        <view > 
                                                <text  class="detailKey">置信度</text> 
                                                <text  wx:if="{{!item.stars}}" class="detailValue">{{item.probability}}</text> 
                                                <block  wx:else>
                                                        <text  wx:for-item="item" wx:key="item" wx:for="{{item.stars}}">
                                                                <text  class="detailValue">{{item.probability}}</text> 
                                                                <text  class="detailValueName">{{item.name}}</text>
                                                        </text>
                                                </block>
                                        </view>
                                </view> 
                        </view>
                </view>
        </view>
        <view  class="page-title">
                <view  class="page-title-line"></view>
                <view  class="page-title-text">imageAudit</view>
        </view>
</view>