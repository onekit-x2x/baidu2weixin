<view  class="wrap">
    <view  class="section">
        <view  class="title">输入区高度自适应</view>
         <onekit-textarea  auto-height bindinput="bindInput" bindfocus="bindFocus" bindblur="bindBlur" bindlinechange="bindLinechange"></onekit-textarea>
    </view>
    <view  class="section">
        <view  class="title">自动聚焦的textarea</view>
         <onekit-textarea  focus="{{!focus}}" style="height:{{height}}rem"></onekit-textarea>
    </view>
</view>
