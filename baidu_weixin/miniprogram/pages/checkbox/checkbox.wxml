<view  class="wrap">
    <view  class="title">默认样式</view>
    <onekit-checkbox-group  bindchange="radioChange" class="checkbox-group">
        <onekit-checkbox  class="checkbox" checked>  选中</onekit-checkbox>
        <onekit-checkbox  class="checkbox" checked="false">  未选中</onekit-checkbox>
    </onekit-checkbox-group>

    <view  class="title">推荐示例</view>
    <view  class="item-wrap">
        <view  class="check" wx:for-item="item" wx:key="item" wx:for="{{items}}">
            <onekit-checkbox  class="check-box" value="{{item.value}}" checked="{{item.checked}}" id="{{item.id}}">{{item.text}}</onekit-checkbox>
        </view>
    </view>
</view>
